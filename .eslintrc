{
    "extends": "react-app",
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "no-undef": "off",
        "max-len": "off",
        "eqeqeq": "off",
        "no-case-declarations": "off",
        "react/sort-comp": "off",
        "no-shadow": "off",
        "arrow-body-style": [
            "error"
        ],
        "one-var-declaration-per-line": "off",
        "no-underscore-dangle": "off",
        "one-var": "off",
        "no-prototype-builtins": "off",
        "no-restricted-syntax": "off",
        "no-continue": "off",
        "guard-for-in": "off",
        "no-fallthrough": "off"
    }
}